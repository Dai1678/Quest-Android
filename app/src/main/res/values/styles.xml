<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="materialAlertDialogTheme">@style/MaterialDialogStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButton.Style</item>
    </style>

    <style name="InputLayout.Activate" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorInputHintText</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="EditText.Style" parent="Base.Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorEditTextBottomBarNormal</item>
        <item name="colorControlActivated">@color/colorEditTextBottomBarActivated</item>
    </style>

    <style name="ProgressBar.Style" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:progressBackgroundTint">@android:color/white</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <style name="MaterialDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialDialogStyle.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialDialogStyle.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialDialogStyle.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialDialogStyle.NegativeButton</item>
    </style>

    <style name="MaterialDialogStyle.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="MaterialDialogStyle.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="MaterialDialogStyle.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimaryPaleText</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="MaterialDialogStyle.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="RadioButton.Style" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

</resources>
