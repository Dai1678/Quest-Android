<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:alertDialogTheme">@style/AlertDialog.Style</item>
        <item name="android:radioButtonStyle">@style/RadioButton.Style</item>
    </style>

    <style name="InputLayout.Activate" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorInputHintText</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="EditText.Style" parent="Base.Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorEditTextBottomBarNormal</item>
        <item name="colorControlActivated">@color/colorEditTextBottomBarActivated</item>
    </style>

    <style name="ProgressBar.Style" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:progressBackgroundTint">#69f0ae</item>
        <item name="android:progressTint">#b71c1c</item>
    </style>

    <style name="AlertDialog.Style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginEnd">@dimen/component_interval_size_small</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/radius_button_background</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:padding">@dimen/component_interval_size_small</item>
    </style>

    <style name="RadioButton.Style" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

</resources>
