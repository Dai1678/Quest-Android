<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable name="patientName" type="String"/>
        <variable name="lastQuestionnaireTime" type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list_item_patient_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

        <TextView
                android:id="@+id/list_item_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@{patientName}"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="東海 太郎"/>

        <TextView
                android:id="@+id/list_item_patient_last_questionnaire_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@{lastQuestionnaireTime}"
                android:textColor="@color/colorPrimaryPaleText"
                app:layout_constraintTop_toBottomOf="@+id/list_item_patient_name"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="最終受験日 : 2019年7月14日"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
