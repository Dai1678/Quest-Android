<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.dai1678.quest.ui.questionnaire.QuestionnaireViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.questionnaire.QuestionnaireEndFragment">

        <TextView
                android:id="@+id/questionnaire_end_message_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/component_interval_size_large"
                android:text="@string/questionnaire_end_message1"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintBottom_toTopOf="@+id/questionnaire_end_message_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:id="@+id/questionnaire_end_message_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/questionnaire_end_message2"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/questionnaire_end_submit_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:padding="@dimen/button_vertical_padding"
                android:paddingStart="@dimen/button_horizontal_padding"
                android:paddingEnd="@dimen/button_horizontal_padding"
                android:text="@string/questionnaire_end_submit_text"
                android:textAppearance="@style/Widget.MaterialComponents.Button"
                android:textSize="@dimen/text_size_large"
                app:cornerRadius="@dimen/button_corner_radius"
                app:layout_constraintBottom_toTopOf="@id/questionnaire_end_back_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_end_message_2" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/questionnaire_end_back_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:padding="@dimen/button_vertical_padding"
                android:paddingStart="@dimen/button_horizontal_padding"
                android:paddingEnd="@dimen/button_horizontal_padding"
                android:text="@string/back"
                android:textAppearance="@style/Widget.MaterialComponents.Button"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_large"
                app:cornerRadius="@dimen/button_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/questionnaire_end_submit_button"
                app:layout_constraintStart_toStartOf="@+id/questionnaire_end_submit_button"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_end_submit_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
