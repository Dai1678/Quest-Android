<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="com.dai1678.quest.ui.questionnaire.QuestionnaireViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.questionnaire.QuestionnaireEndFragment">

        <TextView
                android:id="@+id/questionnaire_end_message_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin"
                android:text="@string/questionnaire_end_message1"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/questionnaire_end_message_2"/>

        <TextView
                android:id="@+id/questionnaire_end_message_2"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="@string/questionnaire_end_message2"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button"
                android:id="@+id/questionnaire_end_submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/questionnaire_end_submit_text"
                android:textSize="@dimen/text_size_large"
                android:textAppearance="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="@dimen/button_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_end_message_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button"
                android:id="@+id/questionnaire_end_back_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:backgroundTint="@android:color/white"
                android:text="@string/back"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_large"
                android:textAppearance="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="@dimen/button_corner_radius"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_end_submit_button"
                app:layout_constraintEnd_toEndOf="@+id/questionnaire_end_submit_button"
                app:layout_constraintStart_toStartOf="@id/questionnaire_end_submit_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
