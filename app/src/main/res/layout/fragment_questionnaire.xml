<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.dai1678.quest.ui.questionnaire.QuestionnaireViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
            android:id="@+id/questionnaire_nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:fillViewport="true"
            android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/questionnaire_number_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/component_interval_size_medium"
                    android:layout_marginTop="@dimen/component_interval_size_medium"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="問1" />

            <TextView
                    android:id="@+id/questionnaire_main_message_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/component_interval_size_medium"
                    android:layout_marginTop="@dimen/component_interval_size_medium"
                    android:layout_marginEnd="@dimen/component_interval_size_medium"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/questionnaire_number_text"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="問題文です" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/questionnaire_recycler_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/component_interval_size_large"
                    app:layout_constraintEnd_toEndOf="@id/questionnaire_main_message_text"
                    app:layout_constraintStart_toStartOf="@id/questionnaire_number_text"
                    app:layout_constraintTop_toBottomOf="@+id/questionnaire_main_message_text"
                    tools:itemCount="1"
                    tools:listitem="@layout/list_item_questionnaire" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/questionnaire_back_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/component_interval_size_large"
                    android:layout_marginBottom="@dimen/component_interval_size_large"
                    android:backgroundTint="@android:color/white"
                    android:padding="@dimen/button_vertical_padding"
                    android:paddingStart="@dimen/button_horizontal_padding"
                    android:paddingEnd="@dimen/button_horizontal_padding"
                    android:text="@string/back"
                    android:textAppearance="@style/Widget.MaterialComponents.Button"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_large"
                    app:cornerRadius="@dimen/button_corner_radius"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/questionnaire_next_button"
                    app:layout_constraintStart_toStartOf="@id/questionnaire_recycler_view"
                    app:layout_constraintTop_toBottomOf="@+id/questionnaire_recycler_view" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/questionnaire_next_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/component_interval_size_large"
                    android:layout_marginBottom="@dimen/component_interval_size_large"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="@dimen/button_vertical_padding"
                    android:paddingStart="@dimen/button_horizontal_padding"
                    android:paddingEnd="@dimen/button_horizontal_padding"
                    android:text="@string/next"
                    android:textAppearance="@style/Widget.MaterialComponents.Button"
                    android:textSize="@dimen/text_size_large"
                    app:cornerRadius="@dimen/button_corner_radius"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/questionnaire_recycler_view"
                    app:layout_constraintStart_toEndOf="@id/questionnaire_back_button"
                    app:layout_constraintTop_toBottomOf="@+id/questionnaire_recycler_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
