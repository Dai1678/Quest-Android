<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable name="sortCategoryName" type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{sortCategoryName}"
                android:textColor="@color/colorPrimaryPaleText"
                android:textSize="@dimen/text_size_micro"
                android:textAppearance="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layoutDirection="rtl"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:icon="@drawable/ic_arrow_upward_black_18dp"
                app:iconTint="@color/colorPrimaryText"
                app:rippleColor="@color/colorBackgroundShadow"
                tools:text="名前順"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
