<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
                name="sortCategoryName"
                type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/component_interval_size_medium"
                android:text="@string/list_header_patient_message"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/component_interval_size_medium"
                android:layoutDirection="rtl"
                android:text="@{sortCategoryName}"
                android:textAppearance="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:textColor="@color/colorPrimaryPaleText"
                android:textSize="@dimen/text_size_small"
                android:visibility="invisible"
                app:icon="@drawable/ic_arrow_upward_black_18dp"
                app:iconTint="@color/colorPrimaryText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@color/colorBackgroundShadow"
                tools:text="名前順" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
