<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="com.dai1678.quest.ui.questionnaire.QuestionnaireViewModel"/>
    </data>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_gravity="center_horizontal"
            android:maxWidth="@dimen/layout_max_width"
            android:overScrollMode="never"
            tools:context=".ui.questionnaire.Questionnaire5Fragment">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/questionnaire_9_number_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/component_interval_size_large"
                    android:layout_marginStart="@dimen/component_interval_size_large"
                    android:text="@string/questionnaire_9_number"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/questionnaire_9_message_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/component_interval_size_large"
                    android:layout_marginStart="@dimen/component_interval_size_large"
                    android:layout_marginEnd="@dimen/component_interval_size_large"
                    android:text="@string/questionnaire_9_message"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/questionnaire_9_number_text"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/questionnaire_9_recycler_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    app:layout_constraintTop_toBottomOf="@+id/questionnaire_9_message_text"
                    app:layout_constraintStart_toStartOf="@id/questionnaire_9_number_text"
                    app:layout_constraintEnd_toEndOf="@id/questionnaire_9_message_text"
                    tools:listitem="@layout/card_view_questionnaire_9"/>

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button"
                    android:id="@+id/questionnaire_9_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:padding="16dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="@string/back"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_large"
                    android:textAppearance="@style/Widget.MaterialComponents.Button"
                    app:cornerRadius="@dimen/button_corner_radius"
                    app:layout_constraintTop_toBottomOf="@+id/questionnaire_9_recycler_view"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/questionnaire_9_message_text"/>

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button"
                    android:id="@+id/questionnaire_9_next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:padding="16dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/next"
                    android:textSize="@dimen/text_size_large"
                    android:textAppearance="@style/Widget.MaterialComponents.Button"
                    app:cornerRadius="@dimen/button_corner_radius"
                    app:layout_constraintTop_toBottomOf="@+id/questionnaire_9_recycler_view"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/questionnaire_9_back_button"
                    app:layout_constraintEnd_toEndOf="@+id/questionnaire_9_message_text"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
