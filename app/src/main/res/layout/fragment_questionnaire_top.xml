<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.questionnaire.QuestionnaireTopFragment">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/questionnaire_top_toolbar"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/AppTheme"
                android:background="@color/colorPrimary"
                app:title="@string/questionnaire_top_toolbar_title"
                app:titleTextColor="@color/colorAccent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

        </androidx.appcompat.widget.Toolbar>

        <TextView
                android:id="@+id/questionnaire_top_message1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="@string/questionnaire_top_message1"
                android:textSize="@dimen/text_size_medium"
                android:lineSpacingExtra="16dp"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_top_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.25"
                app:layout_constraintBottom_toTopOf="@+id/questionnaire_top_message2"/>

        <TextView
                android:id="@+id/questionnaire_top_message2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="@string/questionnaire_top_message2"
                android:textSize="@dimen/text_size_medium"
                android:lineSpacingExtra="16dp"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_top_message1"
                app:layout_constraintBottom_toTopOf="@+id/questionnaire_top_next_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.6"/>

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button"
                android:id="@+id/questionnaire_top_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/next"
                android:textSize="@dimen/text_size_large"
                android:textAppearance="@style/Widget.MaterialComponents.Button"
                app:layout_constraintTop_toBottomOf="@+id/questionnaire_top_message2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.8"
                app:cornerRadius="@dimen/button_corner_radius"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
