<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation_main"
        app:startDestination="@id/userListFragment">

    <action
            android:id="@+id/action_global_user_list_fragment"
            app:destination="@id/userListFragment"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true" />

    <action
            android:id="@+id/action_global_suspend_check_dialog"
            app:destination="@+id/suspendCheckDialogFragment" />

    <action
            android:id="@+id/action_global_alert_dialog_fragment"
            app:destination="@+id/alertDialogFragment" />

    <dialog
            android:id="@+id/alertDialogFragment"
            android:name="com.dai1678.quest.ui.dialog.AlertDialogFragment">

        <argument
                android:name="titleResId"
                android:defaultValue="@string/blank"
                app:argType="reference" />

        <argument
                android:name="titleFormatArgs"
                android:defaultValue="@null"
                app:argType="string[]"
                app:nullable="true" />

        <argument
                android:name="messageResId"
                android:defaultValue="@string/blank"
                app:argType="reference" />

        <argument
                android:name="messageFormatArgs"
                android:defaultValue="@null"
                app:argType="string[]"
                app:nullable="true" />

        <argument
                android:name="positiveTitleResId"
                android:defaultValue="@string/ok"
                app:argType="reference" />

        <argument
                android:name="negativeTitleResId"
                android:defaultValue="@string/blank"
                app:argType="reference" />

        <argument
                android:name="cancelable"
                android:defaultValue="true"
                app:argType="boolean" />

    </dialog>

    <dialog
            android:id="@+id/suspendCheckDialogFragment"
            android:name="com.dai1678.quest.ui.dialog.SuspendCheckDialogFragment"
            android:label="SuspendCheckDialogFragment">

        <action
                android:id="@+id/action_to_patientListFragment"
                app:destination="@+id/userListFragment"
                app:popUpTo="@id/navigation_main"
                app:popUpToInclusive="true" />

    </dialog>

    <fragment
            android:id="@+id/userListFragment"
            android:name="com.dai1678.quest.ui.userList.UserListFragment"
            android:label="@string/user_list_toolbar_title"
            tools:layout="@layout/fragment_user_list">

        <action
                android:id="@+id/action_to_createUserFragment"
                app:destination="@id/createUserFragment"
                app:enterAnim="@anim/slide_from_right"
                app:exitAnim="@anim/slide_to_left" />

        <action
                android:id="@+id/action_to_questionnairePagerFragment"
                app:destination="@id/questionnairePagerFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
            android:id="@+id/createUserFragment"
            android:name="com.dai1678.quest.ui.registerUser.RegisterUserFragment"
            android:label="@string/create_user_toolbar_title"
            tools:layout="@layout/fragment_register_user" />

    <fragment
            android:id="@+id/questionnairePagerFragment"
            android:name="com.dai1678.quest.ui.questionnaire.QuestionnairePagerFragment"
            android:label="@string/questionnaire_toolbar_title">

        <argument
                android:name="userId"
                app:argType="string"
                android:defaultValue="empty"/>

        <argument
                android:name="userGender"
                app:argType="string"
                android:defaultValue="その他" />

        <argument
                android:name="userAgeRange"
                app:argType="string"
                android:defaultValue="その他" />

    </fragment>

</navigation>
