<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation_main"
            app:startDestination="@id/splashFragment">

    <action android:id="@+id/action_global_login_fragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true"/>

    <action android:id="@+id/action_global_patient_list_fragment"
            app:destination="@+id/patientListFragment"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true"/>

    <action android:id="@+id/action_global_suspend_check_dialog"
            app:destination="@+id/suspendCheckDialogFragment"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true"/>

    <fragment android:id="@+id/splashFragment"
              android:name="com.dai1678.quest.ui.splash.SplashFragment"
              tools:layout="@layout/fragment_splash">

        <action android:id="@+id/action_splashFragment_to_patientListFragment"
                app:destination="@id/patientListFragment"
                app:popUpTo="@id/splashFragment"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>

        <action android:id="@+id/action_splashFragment_to_login_navigation"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/splashFragment"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>

    </fragment>

    <fragment android:id="@+id/patientListFragment"
              android:name="com.dai1678.quest.ui.patientList.PatientListFragment"
              android:label="@string/patient_list_toolbar_title"
              tools:layout="@layout/fragment_patient_list">

        <action android:id="@+id/action_patientListFragment_to_createUserActivity"
                app:destination="@id/createUserActivity"
                app:popUpTo="@id/patientListFragment"/>

        <action android:id="@+id/action_patientListFragment_to_diagnosticCheckDialogFragment"
                app:destination="@id/diagnosticCheckDialogFragment"/>

    </fragment>

    <fragment android:id="@+id/loginFragment"
              android:name="com.dai1678.quest.ui.login.LoginFragment"
              android:label="@string/login"
              tools:layout="@layout/login_fragment">

        <action android:id="@+id/action_loginFragment_to_patientListFragment"
                app:destination="@id/patientListFragment"
                app:popUpTo="@id/splashFragment"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>

    </fragment>

    <activity android:id="@+id/createUserActivity"
              android:name="com.dai1678.quest.ui.create.CreatePatientActivity"
              android:label="activity_create_patient"
              tools:layout="@layout/activity_create_patient"/>

    <dialog android:id="@+id/diagnosticCheckDialogFragment"
            android:name="com.dai1678.quest.ui.dialog.DiagnosticCheckDialogFragment">

        <argument android:name="patientFirstName"
                  android:defaultValue="@null"
                  app:argType="string"
                  app:nullable="true"/>

        <action android:id="@+id/action_diagnosticCheckDialogFragment_to_questionnaireTopFragment"
                app:destination="@id/questionnaireTopFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </dialog>

    <fragment android:id="@+id/questionnaireTopFragment"
              android:name="com.dai1678.quest.ui.questionnaire.QuestionnaireTopFragment"
              android:label="QuestionnaireTopFragment"
              tools:layout="@layout/fragment_questionnaire_top">

        <action android:id="@+id/action_questionnaireTopFragment_to_suspendCheckDialogFragment"
                app:destination="@id/suspendCheckDialogFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>

    <dialog android:id="@+id/suspendCheckDialogFragment"
            android:name="com.dai1678.quest.ui.dialog.SuspendCheckDialogFragment"
            android:label="SuspendCheckDialogFragment">
    </dialog>

</navigation>
